{
  "name": "harmonyx-cms-v6",
  "version": "6.0.0",
  "private": true,
  "description": "HarmonyX CMS v6 - Modern CMS with Next.js, Directus, and Kong API Gateway",
  "packageManager": "pnpm@10.15.0",
  "scripts": {
    "dev": "pnpm --filter simple-cms-nextjs dev",
    "build": "pnpm -r build",
    "start": "pnpm -r start",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "type-check": "pnpm -r type-check",
    "format": "pnpm -r format",
    "docker:up": "cd apps && docker compose up -d",
    "docker:down": "cd apps && docker compose down",
    "docker:build": "cd apps && docker compose up -d --build",
    "docker:logs": "cd apps && docker compose logs -f"
  },
  "directus:template": {
    "name": "HarmonyX CMS v6",
    "description": "A ready-to-use CMS with Kong API Gateway, Next.js frontend, and Directus backend",
    "template": "./apps/directus/template",
    "frontends": {
      "nextjs": {
        "name": "Next.js",
        "path": "./apps/nextjs"
      }
    }
  },
  "keywords": [
    "cms",
    "nextjs",
    "directus",
    "kong",
    "api-gateway",
    "headless-cms",
    "monorepo",
    "pnpm-workspace"
  ],
  "author": "HarmonyX Team",
  "license": "MIT"
}