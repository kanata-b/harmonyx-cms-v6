{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "üöÄ Start All Services",
      "type": "shell",
      "command": "docker",
      "args": [
        "compose",
        "up",
        "-d"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "üõë Stop All Services",
      "type": "shell",
      "command": "docker",
      "args": [
        "compose",
        "down"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "üî® Rebuild Services",
      "type": "shell",
      "command": "docker",
      "args": [
        "compose",
        "up",
        "-d",
        "--build"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "üìã View Logs - All",
      "type": "shell",
      "command": "docker",
      "args": [
        "compose",
        "logs",
        "-f"
      ],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new"
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "üìã View Logs - Next.js",
      "type": "shell",
      "command": "docker",
      "args": [
        "compose",
        "logs",
        "-f",
        "nextjs"
      ],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new"
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "üìã View Logs - Directus",
      "type": "shell",
      "command": "docker",
      "args": [
        "compose",
        "logs",
        "-f",
        "directus"
      ],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new"
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "üìã View Logs - Kong",
      "type": "shell",
      "command": "docker",
      "args": [
        "compose",
        "logs",
        "-f",
        "kong"
      ],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new"
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "üö™ Setup Kong Routes",
      "type": "shell",
      "command": "${workspaceFolder}/kong/setup-kong-database.bat",
      "windows": {
        "command": "${workspaceFolder}\\kong\\setup-kong-database.bat"
      },
      "linux": {
        "command": "${workspaceFolder}/kong/setup-kong-database.sh"
      },
      "osx": {
        "command": "${workspaceFolder}/kong/setup-kong-database.sh"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "üßπ Clean Docker",
      "type": "shell",
      "command": "docker",
      "args": [
        "compose",
        "down",
        "--volumes",
        "--rmi",
        "all"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "‚öõÔ∏è Start Next.js Dev",
      "type": "shell",
      "command": "pnpm",
      "args": [
        "dev"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new"
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "nextjs",
        "pattern": {
          "regexp": ".*"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Starting...",
          "endsPattern": "Ready in"
        }
      }
    },
    {
      "label": "üîç Check Services Status",
      "type": "shell",
      "command": "docker",
      "args": [
        "compose",
        "ps"
      ],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "üåê Open Services in Browser",
      "type": "shell",
      "command": "start",
      "args": [
        "http://localhost:8000"
      ],
      "windows": {
        "command": "start",
        "args": [
          "http://localhost:8000"
        ]
      },
      "linux": {
        "command": "xdg-open",
        "args": [
          "http://localhost:8000"
        ]
      },
      "osx": {
        "command": "open",
        "args": [
          "http://localhost:8000"
        ]
      },
      "group": "test",
      "presentation": {
        "echo": false,
        "reveal": "never"
      },
      "problemMatcher": []
    },
    {
      "label": "üìä Workspace List",
      "type": "shell",
      "command": "pnpm",
      "args": [
        "workspace:list"
      ],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "üîÑ Workspace Update",
      "type": "shell",
      "command": "pnpm",
      "args": [
        "workspace:update"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}